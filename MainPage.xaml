<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RzutKostka.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Image
                Source="kk10.jpg"
                HeightRequest="185"
                Aspect="AspectFit"
                x:Name="kosciZDJ"
                 />
  
            <RadioButton
                x:Name="kostka4"
                Content="Rzut Koscia 4oczkowa"
                Value="4"
                CheckedChanged="CheckedChanged"/>
            
            <RadioButton
                x:Name="kostka6"
                Content="Rzut Koscia 6oczkowa"
                Value="6"
                CheckedChanged="CheckedChanged"/>
            
            <RadioButton
                x:Name="kostka10"
                Content="Rzut Koscia 10oczkowa"
                Value="10"
                IsChecked="True"
                CheckedChanged="CheckedChanged"/>
            
            <RadioButton
                x:Name="kostka12"
                Content="Rzut Koscia 12oczkowa"
                Value="12"
                CheckedChanged="CheckedChanged"/>

            <Button
                x:Name="CounterBtn"
                Text="Ej tu kostka! Weź no rzuć mną!" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />
            
            <Label 
                x:Name="Wynik"
                FontSize="Large"
                HorizontalTextAlignment="Center" />
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
